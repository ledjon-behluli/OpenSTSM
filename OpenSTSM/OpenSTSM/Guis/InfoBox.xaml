        <Image x:Name="img" gif:ImageBehavior.RepeatBehavior="Forever" gif:ImageBehavior.AnimateInDesignMode="False" gif:ImageBehavior.AnimatedSource="/Resources/loader.gif" Margin="58,50,50,80" HorizontalAlignment="Center" Stretch="Uniform" />
        <Label x:Name="lblText" Content="AAAAAAAAAAAAAAAAAAAAA" Margin="0,3,0,0" HorizontalContentAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Center" Width="294" FontSize="16" FontFamily="Segoe UI Black" Height="31"/>
