<UserControl x:Class="OpenSTSM.Guis.BlockParameters.Sources.Step"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenSTSM.Guis.BlockParameters.Sources"
             mc:Ignorable="d" 
             Width="400">
    <StackPanel>
        <Label Content="Step time:"/>
        <TextBox Text="{Binding StepTime}" />
        <Label Content="Initial value:"/>
        <TextBox Text="{Binding InitialValue}" />
        <Label Content="Final value:" />
        <TextBox Text="{Binding FinalValue}" />
        <Label Content="Sample time:"/>
        <TextBox Text="{Binding SampleTime}" />
    </StackPanel>
</UserControl>
